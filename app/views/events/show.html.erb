<%# details of a single event %>
<div class="event">
  <h1><%= @event.name %></h1>
  <p><%= @event.location %></p>
  <p><%= @event.date %></p>
  <p><%= @event.time %></p>
</div>

<%# btn options for the user to choose action %>
<div class="event-btn">
  <%= link_to "Join", new_hobby_event_booking_path(@hobby, @event), class: "btn btn-dark btn-sm mb-4" %>
  <%= link_to "Edit", edit_hobby_event_path(@event), class: "btn btn-dark btn-sm mb-4" %>
  <%= link_to "Delete", hobby_event_path(@event), data: { turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger btn-sm mb-4" %>
</div>
