
<div class="container chatroom-bg">

<div class="back-btn mt-2">
  <%= link_to "Back to hobby", hobby_path(params[:hobby_id]), class: "btn btn-outline-dark rounded-pill btn-sm mb-4" %>
</div>


<div class="container chatroom" data-controller="chatroom-subscription"
  data-chatroom-subscription-chatroom-id-value="<%= @chatroom.id %>">
  <h1 style="font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;"><%= @chatroom.name %></h1>

  <div class="container messages" data-chatroom-subscription-target="messages">
    <% @chatroom.messages.each do |message| %>
      <%= render "messages/message", message: message %>
    <% end %>
  </div>

  <div class="container-messages justify-content-between align-items-center">
    <%= simple_form_for [@hobby, @chatroom, @message], html: { data: { action: "turbo:submit-end->chatroom-subscription#resetForm" }, class: "d-flex" } do |f| %>
      <%= f.input :content,
        label: false,
        placeholder: "Type your message here...",
        wrapper_html: {class: "flex-grow-1"}
      %>
      <div class="send-btn">
      <%= f.submit "Send", class: "btn btn-dark rounded-pill mb-3" %>
      </div>
    <% end %>
  </div>
</div>
</div>
