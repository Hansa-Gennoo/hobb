<div class="container">
  <div class="back-btn mt-4">
    <%= link_to "Back to Hobbies", hobbies_path(@hobbies), class: "btn rounded-pill me-2 btn-dark btn-sm mb-4" %>
  </div>

  <h1><%= @hobby.name %></h1>


  <div class="btns-show-bobbies" style="display: flex; justify-content:flex-start; align-items: center;">
    <div class="events-opt">
      <%# <%= link_to "See all events", hobby_events_path(@hobby, @events), class: "btn btn-light mt-4" %>
        <%= link_to "Add an event", new_hobby_event_path(@hobby, @event), class: "btn rounded-pill me-2 btn-outline-dark btn-sm" %>
    </div>


    <div class="chat-btn">
      <%= link_to "Join Chatroom", hobby_chatroom_path(@hobby, @hobby.chatroom), class: "btn rounded-pill me-2 btn-info btn-sm " %>
    </div>
  </div>


  <div class="event-list">

    <% @events.each do |event| %>
    <div class="mt-4 border-bottom border-dark" style="width: 250px;">
      <h5 class="title mt-3"><%= event.name %></h5>

      <h6><%= event.date.strftime("%A, %B %d") %></h6>

      <div class="event-btn">
        <%= link_to "See Details", hobby_event_path(event.hobby_id,event), class: "btn rounded-pill me-2 btn-dark btn-sm mb-4" %>


        <%# <%= link_to "Edit", edit_hobby_event_path(event.hobby_id, event), class: "btn btn-dark btn-sm mb-4" %>

        <%# <%= link_to "Delete", hobby_event_path(event.hobby_id, event), data: { turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-danger btn-sm mb-4" %>
      </div>

    </div>
    <% end %>

  </div>

</div>
