<div class="container">
  <h1 class="title mt-3">Hobbies</h1>

  <% if current_user.admin? %>
    <%= link_to "Add a hobby", new_hobby_path, class: "btn btn-light mb-4" %>
  <% end %>

</div>


<div class="hobby-list">
  <div class="container cards-container">
    <% @hobbies.each do |hobby| %>
    <div class="card bg-dark text-white" style="width: 250px;">
      <img src="https://images.pexels.com/photos/7130557/pexels-photo-7130557.jpeg?auto=compress&cs=tinysrgb&w=600" class="card-img" alt="..." style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4))">
      <div class="card-img-overlay">
        <h5 class="card-title"> <%= hobby.name %></h5>

        <div class="btns">

            <%= link_to "Join", hobby_path(hobby), class: "btn rounded-pill me-2 btn-outline-dark btn-sm mb-4" %>

            <% if current_user.admin? %>
              <%= link_to "Delete", hobby_path(hobby), data: { turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn rounded-pill me-2 btn-outline-danger btn-sm mb-4" %>
            <% end %>
          </div>
        </div>
      </div>

    <% end %>

  </div>


</div>
